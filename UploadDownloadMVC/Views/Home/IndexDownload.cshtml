@model IEnumerable<string>
    
@if (Model.Count() == 0) {
    <div id="zeroAlert" class="alert alert-info" role="alert">
        Sorry, there are no files for downloading.
    </div>

} else {
    <table id="downloadTable" class="table">
        <tr>
            <th>File Name</th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink(item, "DownloadFile", new { fileName = item })
                </td>
            </tr>
        }

    </table>
}